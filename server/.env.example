# Unsent Letters Server Configuration

# Core Server Settings
PORT=8080
NODE_ENV=development
ALLOW_ORIGINS=http://localhost:5173,capacitor://localhost

# AI Providers
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Local AI (choose one: ollama, lmstudio, vllm, none)
OLLAMA_BASE_URL=http://ollama:11434
LMSTUDIO_BASE_URL=http://lmstudio:1234
VLLM_BASE_URL=http://vllm:8000
LOCAL_PROVIDER=ollama

# Auth & Security
JWT_ISSUER=https://unsent-letters.example
JWT_AUDIENCE=unsent-letters-mobile
JWT_EXPIRES_IN=3600
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# Google Sign-In
GOOGLE_CLIENT_ID_IOS=your-ios-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_ID_ANDROID=your-android-client-id.apps.googleusercontent.com

# Apple Sign-In
APPLE_AUDIENCE_BUNDLE_ID=com.example.unsentletters
APPLE_AUDIENCE_SERVICE_ID=com.example.unsentletters.signin
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_KEY_ID=YOUR_APPLE_KEY_ID

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60
MAX_LETTER_CHARS=6000

# Logging (optional)
LOG_LEVEL=info